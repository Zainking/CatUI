.nav
    width 100%
    height 50px
    ul,
    li
        position relative
        display inline-block
    ul
        display flex
        align-items center
        width 100%
        list-style none
        margin-left auto
        margin-right auto
        margin-top 0
        margin-bottom 0
        padding-left 0
    li
        font-size 1.8rem
        color cat-white
        font-weight lighter
        line-height 48px
        width 108px
        text-align center
    a
        text-decoration none
        white-space nowrap
        font-size 1.8rem
        color cat-white
        font-weight lighter
    .logo
            margin-top 10px
    .bg-black
        height 48px
        width 100%
        background-color #383838
        border-bottom 4px solid rgb(102, 102, 102)
.dp-toggle
    ul
        display none
        position absolute
        margin 0
        flex-direction column
        background-color #383838
        transition height 0.5s
        height 0
        border 4px solid rgb(102, 102, 102)
        border-top none
        border-bottom-left-radius 5px
        border-bottom-right-radius 5px
    &:hover
        ul
            display flex
            height auto
    li
        margin-left 0
        width 108px
        text-align center
        &:hover
            background-color #282828
.fix
    fixed top left
.right
    ul
        justify-content flex-end
        margin-right 10px
    li
        margin-left 10px
