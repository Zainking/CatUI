.card
    padding-bottom 38px
    margin-left 15px
    margin-right 15px
    text-align center
    background-color cat-white
    .card-head
        height 40px
        line-height 40px
        color cat-white
        text-align center
        margin auto
    .card-pic
        margin-top 10px
        margin-left 10px
        margin-right 10px
        padding 10px
        text-align center
        background-color cat-gray
        img
            width 270px
            height 100px
    .card-body
        padding 30px
        overflow hidden
    .blue
        background-color cat-blue
    .green
        background-color cat-green
.card-small
    height 180px
.card-large
    height 380px