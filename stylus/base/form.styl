input
    border-bottom 2px solid #9e9e9e
    border-top none
    border-left none
    border-right none
    height 3rem
    font-size 1rem
    margin 0 0 15px 0
    padding 0
    background transparent
    box-shadow none
    transition all .3s
    outline none
    &:hover,
    &:focus
        border-bottom 2px solid #26a69a
        box-shadow 0px 1px 0px #26a69a
textarea
    display block
    padding .625em
    font-size 1.6rem
    line-height 1.2
    color #555
    background-color #fff
    background-image none
    border 1px solid #ccc
    border-radius 5px