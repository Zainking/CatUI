.nav
    width 100%
    z-index 1
    ul,
    li
        position relative
        display inline-block
        flex-flow row
    ul
        display flex
        align-items center
        width 100%
        list-style none
        margin-left auto
        margin-right auto
        margin-top 0
        margin-bottom 0
        padding-left 0
        min-height 40px
    li
        font-size 1.8rem
        color cat-white
        font-weight lighter
        height 37px
        line-height 37px
        text-align center
        margin auto

    a
        text-decoration none
        white-space nowrap
        color cat-white
        font-weight lighter
    .logo
            margin-top 10px
    .bg-black
        height 48px
        width 100%
        background-color #383838
        border-bottom 4px solid rgb(102, 102, 102)
.dp-toggle
    ul
        display none
        position absolute
        margin 0
        flex-direction column
        background-color #383838
        transition height 0.5s
        height 0
        border 4px solid rgb(102, 102, 102)
        border-top none
        border-bottom-left-radius 5px
        border-bottom-right-radius 5px
        li
            margin-left 0
            &:hover
                background-color #282828         
    &:hover
        ul
            display flex
            height auto
.fix
    fixed top left
.right
    ul
        justify-content flex-end
        margin-right 10px
    li
        margin-left 10px
.upright
    ul,
    li
        flex-flow column